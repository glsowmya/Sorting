#include <stdio.h>
void swap(a,b);
int main() {
    int n,a[100],i,j,temp;
    printf("Size: ");
    scanf("%d",&n);
    printf("Enter elements: ");
    for(i=0;i<n;i++)
    {
        scanf("%d",&a[i]);
    }
    
    
    printf("Before sorting: \n");
    for(i=0;i<n;i++)
    {
        printf("%d\n",a[i]);
    }
    
    
    for(i=0;i<n-1;i++)
    {
        int min=i;
        for(j=i+1;j<n;j++)
        {
            if(a[j]<a[min])
            min=j;
        }
        if(min!=0)
        {
            temp=a[i];
            a[i]=a[min];
            a[min]=temp;
        }
    }
    
    
    printf("Sorted: \n");
    for(i=0;i<n;i++)
    {
        printf("%d\t",a[i]);
    }
    return 0;
}
