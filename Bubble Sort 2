#include <stdio.h>

int main()
{
    int n,a[100],temp,i,j,flag=0;
    printf("Size: ");
    scanf("%d",&n);
    
    printf("Array elements are: ");
    for(i=0;i<n;i++)
    {
        scanf("%d",&a[i]);
    }
    
    
    printf("Before sorting: ");
    for(i=0;i<n;i++)
    {
        printf("%d\n",a[i]);
    }
    
    
    for(i=0;i<n-1;i++)
    {
        for(j=0;j<n-1-i;j++)
        {
            if(a[j]>a[j+1])
            {
            temp=a[j];
            a[j]=a[j+1];
            a[j+1]=temp;
            flag=1;
            }
        }
        if(flag==0)
        break;
    }
    
    
    
    printf("Sorted array elements are: ");
    for(i=0;i<n;i++)
    {
        printf("%d\t",a[i]);
    }
    return 0;
}
